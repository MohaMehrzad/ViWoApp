<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production domain with SSL -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">viwoapp.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Allow localhost for development/testing -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator -->
        <domain includeSubdomains="true">10.0.3.2</domain> <!-- Genymotion -->
    </domain-config>
    
    <!-- Allow local network IPs for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
    </domain-config>
</network-security-config>

